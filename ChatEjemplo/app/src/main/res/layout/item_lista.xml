<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardItemLista"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imageItemLista"
                android:layout_margin="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textNombreItemLista"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Matt"
                android:id="@+id/textNombreItemLista"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/imageItemLista"
                app:layout_constraintStart_toEndOf="@id/imageItemLista"
                app:layout_constraintEnd_toStartOf="@id/textFechaItemLista"
                app:layout_constraintBottom_toTopOf="@id/textMensajeItemLista"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hola como estas"
                android:id="@+id/textMensajeItemLista"
                android:textSize="12sp"
                android:textColor="@color/color_subtitle"
                app:layout_constraintTop_toBottomOf="@id/textNombreItemLista"
                app:layout_constraintStart_toStartOf="@id/textNombreItemLista"
                app:layout_constraintEnd_toEndOf="@id/textNombreItemLista"
                app:layout_constraintBottom_toBottomOf="@id/imageItemLista"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:30 PM"
                android:id="@+id/textFechaItemLista"
                android:layout_margin="15dp"
                android:textSize="12sp"
                android:textColor="@color/color_subtitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/textNombreItemLista"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>